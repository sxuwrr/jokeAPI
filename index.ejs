<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Joke API</title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <div class="main-container">
        <h1>Here's the joke from the API</h1>
        <em id="joke"><%- joke || "No joke found!" %></em>
        <br>
        <button id="generate-joke">Generate new joke</button>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const jokeElement = document.getElementById("joke");
            const button = document.getElementById("generate-joke");

            button.addEventListener("click", async () => {
                try {
                    const response = await fetch("/newjoke");
                    const data = await response.json();
                    jokeElement.innerText = data.joke || "No joke found!";
                } catch (error) {
                    console.error("Error fetching joke:", error);
                    jokeElement.innerText = "Failed to load new joke.";
                }
            });
        });
    </script>
</body>

</html>